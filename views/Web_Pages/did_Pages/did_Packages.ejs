                                0900 series
                            </li>
                            <li class="list-group-item">
                                <span class="badge"> $ 14</span>
                                0800 series
                            </li>
                        </ul>
                    </div>
                </div>




                <!-- start of the country flags thumbnail -->
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <h3>Select Your Country</h3>
                        <ul class="list-group" id="Ul_id">

                            <!-- setting the sqlResponse of the country name list from the database table  -->
                            <%  sqlResponse.forEach((element)=>{ %>

                            <li role="button" class="list-group-item" id="<%=element.All_country_name%>"
                                onclick="getCountry(this.id)"> <img
                                    src="/pic/country Flag/Flag_of_<%=element.All_country_name%>.png " height="20px"
                                    width="20px">  <%=element.All_country_name%></li>
                            <% }); %>

                            <!-- end of the sql Response -->

                        </ul>
                    </div>
                </div>
                <!-- end of the country flags thumbnail -->
        </section>
    </div>
</div>


