<script>
    //getting the country data from the database by using the AJAX call and by using the flag div to trigger the AJAX
    function getCountry(paramneter) {

        $.ajax({
            url: `/countryList/${paramneter}`,
            type: "GET",
            success: (result) => {
                $("#countryTitle").html(result.countryPrice[0].All_country_name)
                $("#first_Image").attr("src", `/pic/country Flag/Flag_of_${result.countryPrice[0].All_country_name}.png`)
                //$("#second_Image").attr("src", `/pic/country Flag/Flag_of_${result.countryPrice[0].All_country_name}.png`)
            }
        })
        console.log(paramneter);

    }
</script>
