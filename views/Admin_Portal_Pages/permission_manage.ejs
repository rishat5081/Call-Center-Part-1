<!-- Modal -->
<div class="modal fade settingModal" id="settingModal" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage Permission</h5>
            </div>
            <form action="/admin" method="post">
                <div class="modal-body modalBody" id="modalBody">
                    <div class="col-lg-6">
                        <label for="id">Permission</label>
                        <input type="text" class="form-control" id="add_Permission" name="permission_Manage"
                            placeholder="package">

                    </div>

                </div>

                <div class="modal-footer">
                    <div class="col-lg-12">
                        <a role="button" class="btn btn-default" data-dismiss="modal">Close</a>
                        <a role="submit" class="btn btn-danger" name="delete" value="dddddd">Delete</a>
                        <a role="submit" class="btn btn-primary" name="save">Save </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- getting the row data of the model into the model -->

<script>

    var table = document.getElementById("admin_Management_Table")
    function emptyField() {
        document.getElementById('add_Permission').value = ''
    }
    for (var i = 1; i < table.rows.length; i++) {
        table.rows[i].querySelector('a').onclick = function () {
            console.log(this.closest('tr').cells[0].innerHTML);

            document.getElementById('add_Permission').value = this.closest('tr').cells[1].innerHTML
        };
    }
</script>

