                                <option>Moe</option>
                                <option>Dooley</option>
                                <option>Dooleye</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label for="id">Permission Type Name</label>
                        <input type="text" class="form-control" id="permission_type" name="permission_Manage"
                            placeholder="package,DID">
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="col-lg-12">
                        <a role="button" class="btn btn-default" data-dismiss="modal">Close</a>
                        <a role="submit" class="btn btn-danger" name="delete" value="dddddd">Delete</a>
                        <a role="submit" class="btn btn-primary" name="save">Save </a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





<script>

    var selectDropDown = document.getElementById('admin_Type')

    var table = document.getElementById("admin_Management_Table")
    //defining the function which empty the input fields when user click add permission button
    function emptyField() {
        document.getElementById('permission_type').value = ''
        selectDropDown.selected = false
    }

    // setting the model values when user click manage button
    for (var i = 1; i < table.rows.length; i++) {
        table.rows[i].querySelector('a').onclick = function () {

            document.getElementById('permission_type').value = this.closest('tr').cells[2].innerHTML
            selectedDrop_Down(this.closest('tr').cells[1].innerHTML)
        };
    }

    //set the drop down according to the user manage button
    //setting of the model admin type with the reference of the table 
    //showing the admin type according to the super want to change the admin type
    function selectedDrop_Down(database_Value) {

        for (let i = 0; i < selectDropDown.options.length; i++) {
            console.log(selectDropDown.options[i].text);

            if (database_Value === selectDropDown.options[i].text) {
                selectDropDown.options[i].selected = true
                return
            }
        }
    }
</script>
