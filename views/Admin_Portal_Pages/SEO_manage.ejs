<script>
    // <!-- getting the values from the table and assigning into the model -->
    var table = document.getElementById("admin_Management_Table")
    function emptyField() {
        document.getElementById('type_Name').value = ''
    }

    for (var i = 1; i < table.rows.length; i++) {
        table.rows[i].querySelector('a').onclick = function () {
            document.getElementById('type_Name').value = this.closest('tr').cells[1].innerHTML
            document.getElementById('seo_title').value = this.closest('tr').cells[2].innerHTML
            document.getElementById('seo_keyword').value = this.closest('tr').cells[3].innerHTML
            document.getElementById('seo_description').value = this.closest('tr').cells[4].innerHTML
        };
    }

    // setting the inputs of the model null for the add seo button
    function setNull_to_Add_SEO_btn() {
        document.getElementById('type_Name').value = null
        document.getElementById('seo_title').value = null
        document.getElementById('seo_keyword').value = null
        document.getElementById('seo_description').value = null
    }


</script>

